	<!-- 회원번호를 이용한 회원정보 구하기 -->
	<select id="selectMember" parameterType="string" resultMap="memberMap">
		SELECT
			*
		FROM
			MEMBER m JOIN MEMBER_DETAIL d
		ON
			m.mem_num=d.mem_num
		WHERE
			m.mem_num=#{mem_num}
	</select>
